{% extends "layouts/base.twig" %}

{% block title %}Gestión de Logros - Gabit{% endblock %}

{% block body_class %}page-logros{% endblock %}

{% block content %}
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Gestión de Logros</h1>
            <a href="/crudGabit/dashboard" class="btn btn-outline-secondary">← Volver al Dashboard</a>
        </div>
        <div class="mb-4">
            <a href="/crudGabit/achievements/create" class="btn btn-primary">+ Nuevo Logro</a>
        </div>
        <div class="row mb-4">
            <div class="row">
                <div class="col-md-10">
                    <div class="card p-3 shadow-sm">
                        <h4 class="mb-3">Logros Registrados</h4>
                        <table class="table table-hover align-middle p-5">
                            <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Hábito</th>
                                <th style="width: 25%" class="text-start">Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if logros is empty %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted">
                                        No se encontraron logros
                                    </td>
                                </tr>
                            {% else %}
                                {% for logro in logros %}
                                    <tr>
                                        <td>{{ logro.nombre }}</td>
                                        <td>{{ logro.descripcion }}</td>
                                        <td>{{ logro.nombreHabito }}</td>
                                        <td>
                                            <form method="POST" action="/crudGabit/achievements/edit" style="display:inline">
                                                <input type="hidden" name="idLogro" value="{{ logro.idLogro }}">
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    Editar
                                                </button>
                                            </form>
                                            <form method="POST" action="/crudGabit/achievements/delete" style="display:inline">
                                                <input type="hidden" name="idLogro" value="{{ logro.idLogro }}">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    Eliminar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                    {% if success %}
                        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                            <strong>¡Éxito!</strong> {{ success }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}